<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "user-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= checkbox f, :email_checkbox, checked: !!@changeset.data.email %>
  <%= error_tag f, :email %>

  <%= label f, :username %>
  <%= text_input f, :username %>
  <%= checkbox f, :username_checkbox, checked: !!@changeset.data.username %>
  <%= error_tag f, :username %>

  <%= label f, :number %>
  <%= number_input f, :number %>
  <%= checkbox f, :number_checkbox, checked: !!@changeset.data.number %>
  <%= error_tag f, :number %>

  <%= label f, :description %>
  <%= text_input f, :description %>
  <%= checkbox f, :description_checkbox, checked: !!@changeset.data.description %>
  <%= error_tag f, :description %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
